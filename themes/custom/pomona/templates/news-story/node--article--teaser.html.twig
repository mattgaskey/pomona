{% set has_media = content.field_thumbnail_image is not empty %}
<div class="item border-t-5 border-gray-500 bg-white flex flex-row mb-25">
  {% if has_media %}
  <div class="item__media flex-1/3">
    {{ content.field_thumbnail_image }}
  </div>
  {% endif %}
  <div class="item__content underline-links flex {% if has_media %}flex-2/3 {% endif %}flex-col px-20">
    <div class="mb-10"><a href="{{ url }}" class="ln">{{ label }}</a></div>
    <div class="font-sans text-base text-brown-300 mb-10">{{ content.field_publish_date[0]['#text']|date('l, F j, Y') }}</div>
  </div>
</div>
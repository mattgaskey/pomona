{{ attach_library('pomona/slideshows') }}
{% embed "@fractal/slideshow.twig" with { variant: 'detail', id: 'trumba-events-slideshow' } %}
  {% block slides %}
    {% for i in 0..2 %}
      {% embed "@fractal/top-of-content.twig" with { has_caption: true } %}
        {% block slide_media %}
          <a href="#" class="slideshow--linked-image" tabindex="-1"><img src="/sites/default/files/2020-10/blue__16x9.png" alt="Pomona placeholder image" id="slideshow_img_{{i}}" width="1600px" height="900px"></a>
        {% endblock %}
        {% block slide_caption %}
          <figcaption class="text-2xl px-60 py-20 bg-blue text-white leading-tight font-sans flex items-center min-h-100 absolute inset-x-0 bottom-0 bg-simple-content-slide bg-repeat-x">
            <p>Loading...</p>
            <a href="#" class="btn btn-uppercase btn-lavender btn-more block bottom-0 absolute right-75 slideshow--linked-button">more info</a>
          </figcaption>
        {% endblock %}
      {% endembed %}
    {% endfor %}
  {% endblock %}
{% endembed %}
<div class="bg-gray-200 bg-pttrn-lt-grey pt-50 pb-100">
  <div class="c-container">
    {% block content_footer_content %}
    <div class="grid-of-items overflow-hidden">
      <div class="md:flex md:-mr-25 md:flex-wrap md:items-stretch md:space-between">
        {% set teasers = [
          { headline: 'Spotlight', color: 'green-400' },
          { headline: 'Featured Event', date: 'Jan 21, 2020', textColor: 'orange', color: 'orange-400' },
          { headline: 'Featured News', color: 'lavender' }
        ] %}
        {% for teaser in teasers %}
          <div class="md:pr-25 md:w-1/2 lg:w-1/3 flex flex-col justify-stretch">
            <h2 class="font-sans uppercase px-25 py-10 flex-none">{{ teaser.headline }}</h2>
            <div class="h-full bg-white">
            {% include '@front-teaser' with { teaser: teaser } %}
            </div>
            <p class="bg-white text-right flex-none p-25 border-b-2 border-{{ teaser.color }}">
              <a class="inline-flex items-center text-cyan font-bold uppercase" href="http://www.example.com"><span>{{ teaser.label|default("Click Here") }}</span> <span class="fas fa-chevron-right text-sm pl-5"></span></a>
            </p>
          </div>
        {% endfor %}
      </div>
    </div>
    {% endblock %}
  </div>
</div>

<div class="md:flex md:items-center button-feature">
  <div class="font-serif text-md lg:text-xl md:flex-3/5 md:pr-20 lg:pr-75 lg:flex-3/4">
    <h2 class="text-2xl lg:text-6xl">{{ button_feature_headline|default(random(['The Liberal Arts','Our Faculty','Outside the Classroom','Global Learning'])) }}</h2>
    {% block button_feature_desc %}    
      <p>{{ random([paragraph,words,sentence,catchPhrase,bs])|striptags|capitalize }}</p>
    {% endblock %}
  </div>
  <div class="mt-15 flex flex-wrap justify-start items-stretch md:flex-col md:flex-2/5 md:mt-0 md:justify-start lg:flex-1/4">
    {% block button_feature_buttons %}
      {% if buttons is not empty %}
        {% for button in buttons %}
          {% if button.uri is empty %}
            {% set procButton = { uri: 'http://www.example.com', title: button } %}
          {% else %}
            {% set procButton = button %}
          {% endif %}
          <a href="{{ procButton.uri }}" class="btn btn-lavender btn-more btn-uppercase btn-block btn-sm mr-10 mb-10 md:mr-0 md:mt-10 md:first:mt-0 md:mb-0">
            {{ procButton.title }} 
          </a>
        {% endfor %}
      {% endif %}
    {% endblock %}
  </div>
</div>

<div class="border-t-6 border-gray bg-white mb-25 md:flex">
  <div class="md:flex-1/3 lg:flex-1/2 md:pr-15">
    {% include '@picture' with { width: '252', height: '142' } %}
  </div>
  <div class="pl-40 pr-25 py-20 md:max-w-2/3 md:flex-2/3 lg:flex-1/2 lg:max-w-1/2 font-sans text-brown-300">
    <a class="ln" href="http://www.example.com">{{ sentence }}</a>
    
    <div class="mt-20 text-base">
      {% embed '@icon-block' with { iconClasses: 'text-orange-400', icon: 'fa-clock' } %}
        {% block icon_block_content %}
          Saturday, February 15, 2020
        {% endblock %}
      {% endembed %}

      {% embed '@icon-block' with { iconClasses: 'text-orange-400', icon: 'fa-calendar-alt' } %}
        {% block icon_block_content %}
          6:30 pm
        {% endblock %}
      {% endembed %}

      {% embed '@icon-block' with { iconClasses: 'text-orange-400', icon: 'fa-map-marker-alt' } %}
        {% block icon_block_content %}
          Bridges Auditorium
        {% endblock %}
      {% endembed %}        
    </div>
  </div>
</div>